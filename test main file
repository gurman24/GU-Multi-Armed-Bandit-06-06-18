class Bandit:
    def __init__(self, m):
        self.m = m
        self.mean = 0
        self.N = 0
        self.s2 = 0        
    

    def pull(self):
        return np.random.randn() + self.m

    def update(self, x):
        self.N += 1
        if(self.N > 1):
            self.s2 = ((self.N - 2)/ (self.N -1)) * self.s2 + (x - self.mean) * (x -self.mean) / self.N # ??? is this formatted wrong?

        self.mean = (1 - 1.0/self.N)*self.mean + 1.0/self.N*x
    
